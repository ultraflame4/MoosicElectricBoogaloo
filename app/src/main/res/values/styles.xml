    <style name="ButtonStyle">
        <item name="cornerRadius">9dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="borderWidth">0dp</item>
    </style>


    <style name="PrimaryButtonStyle" parent="@style/ButtonStyle">

    </style>

    <style name="SecondaryButtonStyle" parent="@style/ButtonStyle">
        <item name="backgroundTint">@color/color_c</item>
    </style>

    <style name="LinkButtonStyle" parent="@style/ButtonStyle">
        <item name="backgroundTint">@color/clear</item>
        <item name="android:background">@color/clear</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12dp</item>
    </style>


    <style name="NavBarStyle">
        <item name="android:background">?attr/colorPrimary</item>

        <item name="itemIconTint">@color/bottom_navbar_tint</item>
        <item name="itemTextColor">@color/bottom_navbar_tint</item>
    </style>

    <style name="menuTitle">
        <item name="textFillColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="SongPlayTitle" parent="menuTitle">
        <item name="android:textSize">20sp</item>

    </style>

    <style name="menuSubTitle" parent="menuTitle">
        <item name="android:textSize">24sp</item>

    </style>

    <style name="menuCatTitle" parent="menuSubTitle">
        <item name="android:textSize">21sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="listItem_h1">
        <item name="textFillColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="listItem_h2" parent="listItem_h1">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="listItem_h3" parent="listItem_h2">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="listItem_h4" parent="listItem_h3">
        <item name="android:letterSpacing">0.03</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="listItem_h5" parent="listItem_h4">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="textInputStyle">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@color/gray_white</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">218dp</item>


        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="LoginTextInputStyle" parent="textInputStyle">
        <item name="android:layout_width">250dp</item>
    </style>

</resources>